---
import type { Blog } from '@library/microcms';
import BaseHead from '@components/BaseHead.astro';
import BaseBody from '@components/BaseBody.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

type Props = Blog;

const { title, description, content, thumbnail, tags, writer, tocVisible } = Astro.props;
---

<html lang="ja">
    <head>
        <BaseHead title={title} description={description} image={thumbnail?.url} />
        <style>
            .blog-detail {
                width: 960px;
            }

            @media (max-width: 1040px) {
                .blog-detail {
                    width: auto;
                    padding: 0 28px;
                }
            }

            @media (max-width: 640px) {
                .blog-detail {
                    width: auto;
                    padding: 0 20px;
                }
            }
        </style>
    </head>

    <body>
        <Header />
        <main class="blog-detail">
            <article>
                <slot />
            </article>
        </main>
        <Footer />
        <BaseBody />
    </body>
</html>
