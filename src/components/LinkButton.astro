---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, title, class: className, ...props } = Astro.props;
---

<a href={href} class:list={[className]} {...props}>
    <slot />
</a>

<style>
    a {
        display: block;
        min-width: min-content;
        max-width: 360px;
        width: 100%;
        margin: 0 auto;
        padding: 1.1em 4rem;
        color: #fff;
        font-weight: bold;
        background-color: var(--color-bg-code);
        transition: all 300ms var(--easing-normal);
        line-height: 1;
        border-radius: 3rem;
        box-shadow: var(--box-shadows-sm);
        border: 4px solid var(--color-bg-code);
        letter-spacing: 0.05em;
        text-align: center;
    }

    a:hover,
    a:focus-visible {
        color: var(--color-text-main);
        background-color: var(--color-border-light);
        background-position: 99% 50%;
        box-shadow: none;
    }

    @media (prefers-color-scheme: dark) {
        a {
            color: var(--color-bg-main);
            background-color: #dddde4;
            border-color: #dddde4;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.2);
        }
    
        :is(a:hover, a:focus-visible) {
            color: #dddde4;
            background-color: var(--color-bg-main);
            background-position: 100% 50%;
            box-shadow: none;
        }
    }

    @media (max-width: 640px) {
        a {
            wuth: 100%;
            max-width: 280px;
            font-size: 1em;
            padding: 1.1em 2.8rem;
        }
    }
</style>
